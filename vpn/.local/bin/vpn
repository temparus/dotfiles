#!/bin/bash

case $1 in
    eth)
        case $2 in
            up)
                nmcli con up id "ETH Zurich"
                ;;
            down)
                nmcli con down id "ETH Zurich"
                ;;
            *)
                echo "Command \"${2}\" for VPN provider \"${1}\" not configured!"
                ;;
        esac
        ;;
    *)
        echo "VPN provider \"${1}\" is not configured!"
        ;;
esac
